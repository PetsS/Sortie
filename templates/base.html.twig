<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortie.com{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/Eni_Logo.png') }}">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <img src="{{ asset('img/Eni_Logo.png') }}" />
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}"> {{ message }} </div>
            {% endfor %}
        {% endfor %}
        <nav>
            <ul style="display:flex; flex-direction: row;list-style: none;">
                {% if is_granted('ROLE_ADMIN') %}
                    <li style="padding: 5px;"><a href="{{ path('app_validation') }}">Validations Sorties</a></li>
                    <li style="padding: 5px;"><a href="{{ path('app_utilisateur') }}">Ajout Utilisateur</a></li>
                    <li style="padding: 5px;"><a href="{{ path('app_campus') }}">Les Campus</a></li>

                {% endif %}
                {% if is_granted('IS_AUTHENTICATED') %}
                    <li style="padding: 5px;"><a href="{{ path('app_sortie_liste') }}">Sorties</a></li>
                    <li style="padding: 5px;"><a href="{{ path('app_sortie_creer') }}">Cr√©er une sortie</a>
                    <li style="padding: 5px;"><a href="{{ path('app_profil') }}">Mon Profil</a></li>
                    <li style="padding: 5px;"><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                {% else %}
                    <li style="padding: 5px;"><a href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </nav>

        {% block body %}
        {% endblock %}
    <footer>

    </footer>
    </body>
</html>
