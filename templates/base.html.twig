<!DOCTYPE html>
<html lang="fr" xml:lang="fr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sortie.com{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/Eni_Logo.png') }}">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

<header class="flex-wrap justify-content-center">
    <nav class="navbar navbar-expand-lg navbar-light bg-light"
         style="
            background: linear-gradient(to bottom, #ffffff, rgb(196,196,196));
            "
    >
        <div class="container-fluid">
            <a class="navbar-brand display-6" href="{{ path('app_sortie_liste') }}">
                <img src="{{ asset('img/log-eni.png') }}" alt="logo" width="60"
                     class="d-inline-block align-text-center">
                Sortie.com
            </a>
{#            {% if is_granted('IS_AUTHENTICATED') %}#}
{#                <span>Bienvenue {{ app.user.nom }} {{ app.user.prenom }} [{% for role in app.user.roles %} {{ role }} {% endfor %}]</span>#}
{#            {% endif %}#}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav d-flex gap-2 ms-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_sortie_validationListe') }}">Validation</a></li>
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_profil_liste') }}">Gestion d'Utilisateur</a></li>
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="#">Les Campus</a></li>

                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED') %}
{#                            <li style="padding: 5px;"><a href="{{ path('app_sortie_creer') }}">Créer une sortie</a>#}
                            <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_profil', {'id' : app.user.id }) }}">Mon Profil</a></li>
                            <li class="btn btn-sm btn-outline-danger"><a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a></li>
                            <li class="btn btn-outline-success"><a class="nav-link" href="{{  path('app_adresse_create')}}">Créer une sortie</a></li>
                        {% else %}
                            <li class="btn btn-sm btn-outline-primary"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                        {% endif %}
                    </ul>
                </div>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED') %}
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_sortie_create') }}">Créer une sortie</a>
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_profil', {'id' : app.user.id }) }}">Mon Profil</a></li>
                        <li class="btn btn-sm btn-outline-danger"><a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a></li>
                    {% else %}
                        <li class="btn btn-sm btn-outline-secondary"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </div>

        </div>
    </nav>
</header>

<div>
    {# Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close">
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<div class="container">
    {% block body %}

    {% endblock %}
</div>

<footer class="bg-light text-center fixed-bottom">
    <div class="text-center p-2">
        <div class="container">
            {% set year = "now"|date('Y') %}
            <small class="text-muted">&copy; {{ year }} Sortie.com</small>
        </div>
    </div>
</footer>
</body>
</html>
