{% extends'base.html.twig' %}

{% block title %}Détails sortie - Sortie.com{% endblock %}

{% block body %}

    <header>
        <div class="border border-5 rounded-bottom shadow-sm p-3 text-center bg-body-tertiary"
             style="
            color: #dbeafe;
            margin-top: 1rem;
            margin-bottom: 1rem;
            background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/045.webp');
            /*background-repeat: no-repeat;*/
            /*background-attachment: fixed;*/
            background-size: cover;
            /*max-width: 30rem;*/
            "
        >
            <h1 class="display-6 text-center"> Detail Sortie</h1>
        </div>
    </header>

    <h1 class="display-6 text-center">Créer une sortie</h1>

    <div class="d-flex justify-content-center">
    <div class="border border-0 rounded p-3"
         style="
                margin-top: 1rem;
                margin-bottom: 1rem;
                background-color: rgba(255,255,255,0.16);
                "
    >
    <div class="row g-0">
    <div class="col-md-4">
    {% if sortie.photo %}
        <img src="{{ asset(photo_dir ~ '/' ~ sortie.photo) }}" class="card-img-top" alt="image"

             loading="lazy"/>

    {% else %}
        <img src="{{ asset(photo_dir ~ '/placeholder_profil_img.png') }}" class="card-img-top"

             alt="image"

             loading="lazy"/>

    {% endif %}


    </div>
    </div>
     <p> Nom de la sortie: {{ sortie.nom }}</p>
     <p> Date et heure de la sortie: {{ sortie.dateDebut| date('d/m/y H:i')}} </p>
     <p> Date limite d'inscription: {{ sortie.dateLimiteInscription| date('d/m/y H:i') }}</p>
     <p> Nombre de places: {{ sortie.nbMaxInscription }}</p>
      <p>etat de sortie: {{ sortie.etat }}</p>
     <p> Durée: {{ sortie.duree }}</p>
     <p> Description et infos: {{ sortie.infosSortie }}</p>
     <p>Nom lieu: {{ sortie.adresse.nomLieu }}</p>
     <p> Rue: {{ sortie.adresse.rue}} </p>
     <p> Code Postal: {{sortie.adresse.codePostal}}</p>
     <p> Ville: {{ sortie.adresse.ville}}</p>
     <p> Numero de Rue: {{ sortie.adresse.numeroRue }}</p>
{#     <p>Latitude: {{ sortie.adresse.latitude }}</p>#}
{#     <p>Longitude: {{ sortie.adresse.longitude }}</p>#}


    <a type="button" class="btn btn-primary" href="{{ path('app_sortie_update', {'id' : sortie.id }) }}">Modifier</a>
    <a type="button" class="btn btn-danger" href="{{ path('app_sortie_delete',{'id':sortie.id}) }}" onclick="return confirm('Etes-vous sûr ?')">supprimer</a>
    </div>
    </div>



{% endblock %}